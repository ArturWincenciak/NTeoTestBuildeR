[
  {
    "Description": "Set up a to-do",
    "Request": {
      "Method": {
        "Method": "POST"
      },
      "Path": "http://localhost/todos",
      "Payload": {
        "Title": "Land on the moon",
        "Tags": [
          "astronomy"
        ]
      }
    },
    "Response": {
      "StatusCode": "Created",
      "Headers": {
        "Location": [
          "/Todos/Guid_1"
        ]
      },
      "Payload": {
        "Id": "Guid_1"
      }
    }
  },
  {
    "Description": "Retrieve already created to-do item",
    "Request": {
      "Method": {
        "Method": "GET"
      },
      "Path": "http://localhost/Todos/Guid_1"
    },
    "Response": {
      "StatusCode": "OK",
      "Payload": {
        "Title": "Land on the moon",
        "Tags": [
          "astronomy"
        ],
        "Done": false
      }
    }
  },
  {
    "Description": "Mark the to-do as done",
    "Request": {
      "Method": {
        "Method": "PUT"
      },
      "Path": "http://localhost/Todos/Guid_1",
      "Payload": {
        "Title": "Land on the moon",
        "Tags": [
          "astronomy"
        ],
        "Done": true
      }
    },
    "Response": {
      "StatusCode": "NoContent"
    }
  },
  {
    "Description": "Retrieve the to-do that has been done",
    "Request": {
      "Method": {
        "Method": "GET"
      },
      "Path": "http://localhost/Todos/Guid_1"
    },
    "Response": {
      "StatusCode": "OK",
      "Payload": {
        "Title": "Land on the moon",
        "Tags": [
          "astronomy"
        ],
        "Done": true
      }
    }
  }
]